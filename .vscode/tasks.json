{
    "version": "2.0.0",
    "tasks": [
        {
            "args": [
                "-g",
                "-Wall",
                "-std=c++11",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "label": "Compile",
            "type": "shell",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "windows": {
                "command": "g++",
                "args": [
                    "-ggdb",
                    "\"${file}\"",
                    "-o",
                    "-std=c++11",
                    "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
                ]
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cpp.exe 生成活动文件",
            "command": "D:\\MinGW\\bin\\cpp.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}